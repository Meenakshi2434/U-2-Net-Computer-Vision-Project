{"nbformat":4,"nbformat_minor":0,"metadata":{"colab":{"provenance":[],"mount_file_id":"1QMpNztmHoeFivPhyqpEgwhORKY-hy5iZ","authorship_tag":"ABX9TyPCIu2sXt/thSLyJa0QGwsX"},"kernelspec":{"name":"python3","display_name":"Python 3"},"language_info":{"name":"python"}},"cells":[{"cell_type":"code","source":["import cv2\n","import numpy as np\n","import glob\n","import os\n","import matplotlib.pyplot as plt\n","\n","# Paths to your image and mask folders\n","image_folder = '/content/drive/MyDrive/Image'\n","mask_folder = '/content/drive/MyDrive/Mask'\n","output_folder = '/content/drive/MyDrive/Output'\n","\n","# Create the output directory if it doesn't exist\n","if not os.path.exists(output_folder):\n","    os.makedirs(output_folder)\n","\n","# Get the paths to all images and masks\n","image_path = sorted(glob.glob(os.path.join(image_folder, '*.jpg')))  # Adjust extension if needed\n","mask_path = sorted(glob.glob(os.path.join(mask_folder, '*.png')))   # Adjust extension if needed\n","\n"],"metadata":{"id":"oJzdvpdB2yHM","executionInfo":{"status":"ok","timestamp":1723897661547,"user_tz":240,"elapsed":731,"user":{"displayName":"Meenakshi Jangra","userId":"05958568856643630195"}}},"execution_count":5,"outputs":[]},{"cell_type":"code","source":["def create_background(image_shape, type='white'):\n","\n","    height, width = image_shape[:2]\n","\n","    if type == 'white':\n","        background = np.ones((height, width, 3), dtype=np.uint8) * 255\n","    elif type == 'gradient':\n","        background = np.zeros((height, width, 3), dtype=np.uint8)\n","        for i in range(height):\n","            intensity = int(255 * (1 - i / height))\n","            background[i, :] = (intensity, intensity, intensity)\n","\n","    return background\n","\n","def add_background_and_shadow(image_path, mask_path, output_path, background_type='white'):\n","    \"\"\"Adds a virtual background and simulates a shadow for a car image.\n","\n","    Args:\n","        image_path: The path to the car image.\n","        mask_path: The path to the car mask image.\n","        output_path: The path to save the output image.\n","        background_type: The type of background to create ('white' or 'gradient').\n","    \"\"\"\n","\n","    # Load the car image\n","    car_image = cv2.imread(image_path)\n","\n","    # Load the mask as a grayscale image\n","    car_mask = cv2.imread(mask_path, cv2.IMREAD_GRAYSCALE)\n","\n","    if car_image is None:\n","        print(f\"Error: Unable to load image from {image_path}\")\n","        return\n","    if car_mask is None:\n","        print(f\"Error: Unable to load mask from {mask_path}\")\n","        return\n","\n","    if car_mask.dtype != np.uint8:\n","        print(\"Warning: Mask data type should be uint8.\")\n","        car_mask = car_mask.astype(np.uint8)\n","\n","    # Create a background programmatically\n","    virtual_background = create_background(car_image.shape, type=background_type)\n","\n","    # Apply the mask to the car image to extract the car\n","    car_foreground = cv2.bitwise_and(car_image, car_image, mask=car_mask)\n","\n","    # Ensure the car_foreground is only added where the mask is present\n","    car_area = cv2.bitwise_and(virtual_background, virtual_background, mask=cv2.bitwise_not(car_mask))\n","\n","    # Invert the mask to isolate the background\n","    background_mask = cv2.bitwise_not(car_mask)\n","\n","    # Extract the background\n","    background_region = cv2.bitwise_and(virtual_background, virtual_background, mask=background_mask)\n","\n","    # Combine the car with the background\n","    combined_image = cv2.add(background_region, car_foreground)\n","\n","    # Simulate shadow by dilating and blurring the mask\n","    shadow_mask = cv2.dilate(car_mask, np.ones((15, 15), np.uint8), iterations=1)\n","    shadow_mask = cv2.GaussianBlur(shadow_mask, (21, 21), 10)\n","\n","    # Create a shadow effect by darkening the area under the car\n","    shadow = np.zeros_like(car_image)\n","    shadow[:, :, 0] = shadow_mask\n","    shadow[:, :, 1] = shadow_mask\n","    shadow[:, :, 2] = shadow_mask\n","\n","    # Darken the shadow region\n","    shadow = cv2.addWeighted(shadow, 0.3, np.zeros_like(shadow), 0.7, 0)\n","\n","    # Offset the shadow downwards\n","    shadow_offset = 10  # Number of pixels to move the shadow down\n","    shadow = np.roll(shadow, shadow_offset, axis=0)\n","\n","    # Combining shadow with the background + car image\n","\n","    combined_with_shadow = cv2.addWeighted(combined_image, 1, shadow, 0.5, 0)\n","\n","    # Saving the final image\n","    cv2.imwrite(output_path, combined_with_shadow)\n","    print(f\"Output saved to {output_path}\")\n","\n","# Processing all images in the folder\n","image_folder = '/content/drive/MyDrive/Image'\n","mask_folder = '/content/drive/MyDrive/Mask'\n","output_folder = '/content/drive/MyDrive/Output'\n","\n","for img_name in os.listdir(image_folder):\n","    image_path = os.path.join(image_folder, img_name)\n","\n","    # Changing extension from .jpg to .png for mask files\n","    mask_name = img_name.replace('.jpg', '.png')  # Assuming original images are .jpg and masks are .png\n","    mask_path = os.path.join(mask_folder, mask_name)\n","\n","    output_path = os.path.join(output_folder, img_name)\n","\n","    add_background_and_shadow(image_path, mask_path, output_path, background_type='white')"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"OI0FmBScXu9O","executionInfo":{"status":"ok","timestamp":1723899604010,"user_tz":240,"elapsed":1453,"user":{"displayName":"Meenakshi Jangra","userId":"05958568856643630195"}},"outputId":"3157558b-1442-4e26-bc21-553197d140b3"},"execution_count":14,"outputs":[{"output_type":"stream","name":"stdout","text":["Output saved to /content/drive/MyDrive/Output/10.jpg\n","Output saved to /content/drive/MyDrive/Output/20.jpg\n","Output saved to /content/drive/MyDrive/Output/1.jpg\n","Output saved to /content/drive/MyDrive/Output/4.jpg\n","Output saved to 